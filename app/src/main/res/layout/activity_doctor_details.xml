<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp"
    android:paddingTop="20dp"
    android:paddingBottom="10dp"
    android:background="@color/lighterWhiteColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_menu_back"
            app:tint="@color/blackColor"
            android:rotation="90"
            android:clickable="true"
            android:contentDescription="Back Icon"
            android:layout_gravity="start"/>

        <!-- Spacer View to push icons to the ends -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/favIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/heart_logo"
            app:tint="@color/grayColor"
            android:clickable="true"
            android:contentDescription="Back Icon"
            android:layout_gravity="end"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/doctorImg"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/user_logo"
        android:contentDescription="Doctor Image"/>

    <TextView
        android:id="@+id/doctorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Dr. John Doe"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/blackColor"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/doctorSpecialization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Cardiology"
        android:textSize="18sp"
        android:textColor="@color/blackColor"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/locationImg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="2dp"
            android:src="@drawable/location_logo"
            android:contentDescription="Location Pin Icon"/>

        <TextView
            android:id="@+id/doctorLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delhi"
            android:textSize="16sp"
            android:textColor="@color/blackColor"/>

    </LinearLayout>

    <!-- Layout for Patient, Experience, and Rating -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal">

        <!-- Patient -->
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical"
            android:padding="5dp"
            android:gravity="center"
            android:background="@drawable/rectangle_shape"
            android:backgroundTint="@color/whiteColor">

            <TextView
                android:id="@+id/patientsHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Patients"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/blackColor"/>

            <ImageView
                android:id="@+id/patientsImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:src="@drawable/ic_menu_allfriends"
                app:tint="@color/blueColor"
                android:backgroundTint="@color/blueColor"
                android:contentDescription="Patients Icon"/>

            <TextView
                android:id="@+id/patientsDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500"
                android:textSize="16sp"
                android:textColor="@color/blackColor"/>
        </LinearLayout>

        <!-- Experience -->
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="10dp"
            android:padding="5dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/rectangle_shape"
            android:backgroundTint="@color/whiteColor">

            <TextView
                android:id="@+id/experienceHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Experience"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/blackColor"/>

            <ImageView
                android:id="@+id/experienceImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="9dp"
                android:src="@drawable/experience_logo"
                app:tint="@color/blueColor"
                android:contentDescription="Experience Icon"/>

            <TextView
                android:id="@+id/experienceDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 years"
                android:textSize="16sp"
                android:textColor="@color/blackColor"/>
        </LinearLayout>

        <!-- Rating -->
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="5dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/rectangle_shape"
            android:backgroundTint="@color/whiteColor">

            <TextView
                android:id="@+id/ratingHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/blackColor"/>

            <ImageView
                android:id="@+id/ratingImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:src="@android:drawable/btn_star_big_on"
                app:tint="@color/lightBlue"
                android:contentDescription="Rating Icon"/>

            <TextView
                android:id="@+id/ratingDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.2"
                android:textSize="16sp"
                android:textColor="@color/blackColor"/>
        </LinearLayout>

    </LinearLayout>

    <!-- About Section -->
    <TextView
        android:id="@+id/aboutHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/blackColor"
        android:layout_marginTop="20dp"
        android:gravity="start"/>

    <TextView
        android:id="@+id/aboutDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dr. ABC has a degree in DEF Specialization and is associated with 'XYZ Hospital'."
        android:textSize="16sp"
        android:textColor="@color/blackColor"
        android:layout_marginTop="5dp"
        android:gravity="start"/>

    <!-- Availability Section -->
    <TextView
        android:id="@+id/availabilityHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Availability"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/blackColor"
        android:layout_marginTop="20dp"
        android:gravity="start"/>

    <TextView
        android:id="@+id/availabilityDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Monday, Wednesday: 10:00 a.m. - 12:00 p.m."
        android:textSize="16sp"
        android:textColor="@color/blackColor"
        android:layout_marginTop="5dp"
        android:gravity="start"/>

    <!-- Consultation Fee Section -->
    <TextView
        android:id="@+id/consultationFeeHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Consultation Fee"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/blackColor"
        android:layout_marginTop="20dp"
        android:gravity="start"/>

    <TextView
        android:id="@+id/consultationFeeDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rs. 500/- (inc. of all taxes)"
        android:textSize="16sp"
        android:textColor="@color/blackColor"
        android:layout_marginTop="5dp"
        android:gravity="start"/>

    <!-- Book Appointment Button -->

    <!-- Space to push the button to the bottom -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Button fixed at the bottom -->
    <Button
        android:id="@+id/bookBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Book Appointment"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/whiteColor"
        android:background="@drawable/rectangle_shape"
        app:backgroundTint="@color/blueColor"
        android:clickable="true"
        android:gravity="center"/>
</LinearLayout>
