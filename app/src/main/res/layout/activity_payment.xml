<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp"
    android:paddingTop="20dp"
    android:paddingBottom="10dp"
    android:background="@color/lighterWhiteColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_menu_back"
            app:tint="@color/blackColor"
            android:rotation="90"
            android:clickable="true"
            android:contentDescription="Back Icon"
            android:layout_gravity="start"/>

        <!-- Spacer View to push icons to the ends -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/blackColor"/>

        <!-- Another spacer view to push the title to the center -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Choose a Payment Method"
        android:textSize="18sp"
        android:textColor="@color/blackColor"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/cardPaymentMethod"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/payment_card_logo"
            app:tint="@color/whiteColor"
            android:background="@drawable/circle_shape"
            android:backgroundTint="@color/blueColor"
            android:contentDescription="Card Payment Method Icon"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/UPIPaymentMethod"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/payemt_upi_logo"
            app:tint="@color/whiteColor"
            android:background="@drawable/circle_shape"
            android:backgroundTint="@color/blueColor"
            android:contentDescription="UPI Payment Method Icon"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/netBankingPaymentMethod"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/payemt_net_banking_logo"
            app:tint="@color/whiteColor"
            android:background="@drawable/circle_shape"
            android:backgroundTint="@color/blueColor"
            android:contentDescription="Net Banking Payment Method Icon"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/eWalletPaymentMethod"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/payemt_e_wallet_logo"
            app:tint="@color/whiteColor"
            android:background="@drawable/circle_shape"
            android:backgroundTint="@color/blueColor"
            android:contentDescription="E - Wallet Payment Method Icon"
            android:clickable="true"/>

    </LinearLayout>

    <!-- Space to push the button to the bottom -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Button fixed at the bottom -->
    <Button
        android:id="@+id/paymentBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Pay Rs. 100"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/whiteColor"
        android:background="@drawable/rectangle_shape"
        app:backgroundTint="@color/blueColor"
        android:clickable="true"
        android:gravity="center"/>
</LinearLayout>
