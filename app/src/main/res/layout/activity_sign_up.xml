<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueColor"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/circleLogo"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginHorizontal="140dp"
        android:layout_marginVertical="10dp"
        android:contentDescription="Circle Logo"
        android:src="@drawable/circle_logo"
        />

    <LinearLayout
        android:id="@+id/whiteRectangle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/rectangle_shape"
        android:backgroundTint="@color/lighterWhiteColor"
        android:layout_gravity="center_vertical"
        >

        <EditText
            android:id="@+id/usernameInput"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginHorizontal="20dp"
            android:paddingVertical="5dp"
            android:paddingStart="20dp"
            android:paddingEnd="11dp"
            android:inputType="text"
            android:textSize="16sp"
            android:textColor="@color/blackColor"
            android:hint="User Name"
            android:textColorHint="@color/grayColor"
            android:background="@drawable/rectangle_shape"
            android:backgroundTint="@color/whiteColor"
            android:drawablePadding="10dp"
            android:drawableEnd="@drawable/user_logo"
            android:drawableTint="@color/grayColor"
            />

        <EditText
            android:id="@+id/emailInput"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:paddingVertical="5dp"
            android:paddingStart="20dp"
            android:paddingEnd="10dp"
            android:inputType="textEmailAddress"
            android:textSize="16sp"
            android:textColor="@color/blackColor"
            android:hint="Email"
            android:textColorHint="@color/grayColor"
            android:background="@drawable/rectangle_shape"
            android:backgroundTint="@color/whiteColor"
            android:drawableEnd="@android:drawable/sym_action_email"
            android:drawablePadding="10dp"
            android:drawableTint="@color/grayColor"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passwordInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            app:endIconMode="password_toggle"
            app:boxStrokeColor="@color/blueColor"
            app:boxStrokeWidth="0dp">

            <!--                app:boxCornerRadiusTopEnd="50dp"-->
            <!--                app:boxCornerRadiusTopStart="50dp"-->

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/passwordInput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPassword"
                android:paddingVertical="5dp"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"
                android:textSize="16sp"
                android:textColor="@color/blackColor"
                android:hint="Password"
                android:textColorHint="@color/grayColor"
                android:background="@drawable/rectangle_shape"
                android:backgroundTint="@color/whiteColor"
                android:clickable="true"
                android:contextClickable="true"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/confirmPasswordInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            app:endIconMode="password_toggle"
            app:boxStrokeColor="@color/blueColor"
            app:boxStrokeWidth="0dp">

            <!--                app:boxCornerRadiusTopEnd="50dp"-->
            <!--                app:boxCornerRadiusTopStart="50dp"-->

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/confirmPasswordInput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPassword"
                android:paddingVertical="5dp"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"
                android:textSize="16sp"
                android:textColor="@color/blackColor"
                android:hint="Confirm Password"
                android:textColorHint="@color/grayColor"
                android:background="@drawable/rectangle_shape"
                android:backgroundTint="@color/whiteColor"
                android:clickable="true"
                android:contextClickable="true"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/forgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:text="@string/forgotLink"
            android:textSize="14sp"
            android:autoLink="web"
            android:textColorLink="@color/grayColor"
            android:layout_gravity="end"
            />

        <Button
            android:id="@+id/signUpButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginHorizontal="20dp"
            android:text="Sign Up"
            android:textSize="18sp"
            android:textColor="@color/whiteColor"
            android:background="@drawable/rectangle_shape"
            app:backgroundTint="@color/blueColor"
            android:enabled="true"
            android:clickable="true"
            />

        <TextView
            android:id="@+id/continueWith"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:text="Or Continue With"
            android:textSize="16sp"
            android:textColor="@color/blackColor"
            android:layout_gravity="center"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            >

            <ImageView
                android:id="@+id/googleLogoImg"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/google_logo"
                android:layout_marginHorizontal="10dp"
                android:contentDescription="Google Logo"
                android:clickable="true"
                />

            <ImageView
                android:id="@+id/twitterLogoImg"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/twitter_logo"
                android:layout_marginHorizontal="10dp"
                android:contentDescription="Twitter Logo"
                android:clickable="true"
                />

            <ImageView
                android:id="@+id/facebookLogoImg"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/facebook_logo"
                android:layout_marginHorizontal="10dp"
                android:contentDescription="Facebook Logo"
                android:clickable="true"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>