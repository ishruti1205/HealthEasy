<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentSuccessfulActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="20dp"
        android:background="@color/whiteColor"
        android:gravity="center">
<!--        android:elevation="10dp"-->

        <ImageView
            android:id="@+id/paymentSuccessImg"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/tick_logo"
            app:tint="@color/whiteColor"
            android:background="@drawable/circle_shape"
            android:backgroundTint="@color/greenColor"
            android:contentDescription="Payment Success Icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="Congratulations!"
            android:textSize="24sp"
            android:textColor="@color/blueColor"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="Your payment is successful"
            android:textSize="22sp"
            android:textColor="@color/blackColor"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/backBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Back"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/whiteColor"
            android:background="@drawable/rectangle_shape"
            app:backgroundTint="@color/blueColor"
            android:clickable="true"
            android:gravity="center"/>
    </LinearLayout>

</FrameLayout>
