<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp"
    android:paddingTop="20dp"
    android:paddingBottom="10dp"
    android:background="@color/lighterWhiteColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_menu_back"
            app:tint="@color/blackColor"
            android:rotation="90"
            android:clickable="true"
            android:contentDescription="Back Icon"
            android:layout_gravity="start"/>

        <!-- Spacer View to push icons to the ends -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />


        <TextView
            android:id="@+id/titleBookAppointment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Appointment"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/blackColor"/>

        <!-- Another spacer view to push the title to the center -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

<!-- Select Date -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Select Date"
        android:textSize="18sp"
        android:textColor="@color/blackColor"
        android:textStyle="bold"
        />

    <!-- Calendar View -->
    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangle_shape"
        android:backgroundTint="@color/whiteColor"
        android:dateTextAppearance="@style/CalendarDateTextAppearance"
        android:weekDayTextAppearance="@style/CalendarWeekTextAppearance"
        android:firstDayOfWeek="2"
        android:minDate="05/14/2024"
        android:maxDate="07/14/2024"/>

    <!-- Select Time -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Select Time"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/blackColor"/>

    <!-- Time Slots (4 slots) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Time Slot 1 -->
        <Button
            android:id="@+id/timeSlot1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rectangle_shape"
            app:backgroundTint="@color/whiteColor"
            android:text="02:00 PM"
            android:textSize="16dp"
            android:textColor="@color/blackColor"
            android:clickable="true"
            />

        <!-- Time Slot 2 -->
        <Button
            android:id="@+id/timeSlot2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rectangle_shape"
            app:backgroundTint="@color/whiteColor"
            android:text="02:30 PM"
            android:textSize="16dp"
            android:textColor="@color/blackColor"
            android:clickable="true"/>

        <!-- Time Slot 3 -->
        <Button
            android:id="@+id/timeSlot3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rectangle_shape"
            app:backgroundTint="@color/whiteColor"
            android:text="03:00 PM"
            android:textSize="16dp"
            android:textColor="@color/blackColor"
            android:clickable="true"/>

        <!-- Time Slot 4 -->
        <Button
            android:id="@+id/timeSlot4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rectangle_shape"
            app:backgroundTint="@color/whiteColor"
            android:text="03:30 PM"
            android:textSize="16dp"
            android:textColor="@color/blackColor"
            android:clickable="true"/>

    </LinearLayout>

    <!-- Space to push the button to the bottom -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Button fixed at the bottom -->
    <Button
        android:id="@+id/setAppointmentBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Set Appointment"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/whiteColor"
        android:background="@drawable/rectangle_shape"
        app:backgroundTint="@color/blueColor"
        android:clickable="true"
        android:gravity="center"/>
</LinearLayout>
