<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/lighterWhiteColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_menu_back"
            app:tint="@color/blackColor"
            android:rotation="90"
            android:clickable="true"
            android:contentDescription="Back Icon"
            android:layout_gravity="start"/>

        <!-- Spacer View to push icons to the ends -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/blackColor"/>

        <!-- Another spacer view to push the title to the center -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <!-- Current Password Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Current Password"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/blackColor" />

    <EditText
        android:id="@+id/oldPasswordInput"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:paddingVertical="5dp"
        android:paddingStart="20dp"
        android:paddingEnd="10dp"
        android:textSize="16sp"
        android:background="@drawable/rectangle_shape"
        android:backgroundTint="@color/whiteColor"
        android:hint="Enter Current Password"
        android:textColorHint="@color/grayColor"
        android:contentDescription="Input field for current password"
        android:inputType="textPassword" />

    <!-- New Password Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="New Password"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/blackColor" />

    <EditText
        android:id="@+id/newPasswordInput"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:paddingVertical="5dp"
        android:paddingStart="20dp"
        android:paddingEnd="10dp"
        android:textSize="16sp"
        android:background="@drawable/rectangle_shape"
        android:textColorHint="@color/grayColor"
        android:backgroundTint="@color/whiteColor"
        android:hint="Enter New Password"
        android:contentDescription="Input field for new password"
        android:inputType="textPassword" />

    <!-- Confirm Password Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Confirm New Password"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/blackColor" />

    <EditText
        android:id="@+id/confirmPasswordInput"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:paddingVertical="5dp"
        android:paddingStart="20dp"
        android:paddingEnd="10dp"
        android:textSize="16sp"
        android:background="@drawable/rectangle_shape"
        android:backgroundTint="@color/whiteColor"
        android:textColorHint="@color/grayColor"
        android:hint="Confirm New Password"
        android:contentDescription="Input field to confirm new password"
        android:inputType="textPassword" />

    <!-- Change Password Button -->
    <Button
        android:id="@+id/changePasswordButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:text="Change Password"
        android:textSize="20sp"
        android:background="@drawable/rectangle_shape"
        android:textColor="@color/whiteColor"
        app:backgroundTint="@color/blueColor"
        android:contentDescription="Button to change password" />
</LinearLayout>